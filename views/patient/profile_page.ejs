<!-- patient profile page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel="shortcut icon" href="/images/heart.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
 
</head>
<style>
    ul{
        padding-left: 0;
    }
    body {
        font-family: Arial;
        overflow: hidden;
    }
    .main {
        margin-left: auto;
    margin-right: auto;
        font-size: 28px;
        padding: 0 10px;
        width: 58%;
    }

    .main h2 {
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 24px;
        margin-bottom: 10px;
    }

    .main .card {
        background-color: #fff;
        border-radius: 18px;
        box-shadow: 1px 1px 8px 0 grey;
        height: auto;
        margin-bottom: 20px;
        padding: 20px 0 20px 50px;
    }

    .main .card table {
        border: none;
        font-size: 16px;
        height: 270px;
        width: 80%;
    }

/* End */
</style>
<body>
        <%-include('../partials/sidebar_doctor',{email:email})%>
<br>
<br>
<br>
<br>
    <!-- Main -->
    <div class="main">
        <h2 >Patient Profile</h2>
        <div class="card">
            <div class="card-body">
                <table>
                    <tbody>
                        <tr>
                            <td>Name</td>
                            <td>:</td>
                            <td><%= patient[0].name %></td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>:</td>
                            <td><%= patient[0].email %></td>
                        </tr>
                        <tr>
                            <td>gender</td>
                            <td>:</td>
                            <td><%= patient[0].gender %></td>
                        </tr>
                        <tr>
                            <td>Dateofbirth</td>
                            <td>:</td>
                            <td><%= patient[0].dateofbirth %></td>
                        </tr>
                        <tr>
                            <td>BloodGroup</td>
                            <td>:</td>
                            <td><%= patient[0].bloodgroup %></td>
                        </tr>
                        <tr>
                            <td>Contact</td>
                            <td>:</td>
                            <td><%= patient[0].contact %></td>
                        </tr>
                        <tr>
                            <td>Insurance</td>
                            <td>:</td>
                            <td><%= patient[0].insuranceno %></td>
                        </tr>
                        <tr>
                            <td>Address</td>
                            <td>:</td>
                            <td><%= patient[0].address %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <script src="/javascript/sidebar.js"></script>
</body>
</html>