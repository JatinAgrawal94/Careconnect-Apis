<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
    body {font-family: Arial, Helvetica, sans-serif;}
    
    /* The Modal (background) */
    .modal {
      display: none; /* Hidden by default */
      position: fixed; /* Stay in place */
      z-index: 1; /* Sit on top */
      padding-top: 100px; /* Location of the box */
      left: 0;
      top: 0;
      width: 100%; /* Full width */
      height: 100%; /* Full height */
      overflow: auto; /* Enable scroll if needed */
      background-color: rgb(0,0,0); /* Fallback color */
      background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }
    
    /* Modal Content */
    .modal-content {
      position: relative;
      background-color: #fefefe;
      margin: auto;
      padding: 0;
      border: 1px solid #888;
      width: 80%;
      box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2),0 6px 20px 0 rgba(0,0,0,0.19);
      -webkit-animation-name: animatetop;
      -webkit-animation-duration: 0.4s;
      animation-name: animatetop;
      animation-duration: 0.4s
    }
    
    /* Add Animation */
    @-webkit-keyframes animatetop {
      from {top:-300px; opacity:0} 
      to {top:0; opacity:1}
    }
    
    @keyframes animatetop {
      from {top:-300px; opacity:0}
      to {top:0; opacity:1}
    }
    
    /* The Close Button */
    .close {
      color: white;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }
    
    .close:hover,
    .close:focus {
      color: #000;
      text-decoration: none;
      cursor: pointer;
    }
    
    .modal-header {
      padding: 2px 16px;
      background-color: purple;
      color: white;
    }
    
    .modal-body {padding: 2px 16px;}
    
    .modal-footer {
      padding: 2px 16px;
      background-color: purple;
      color: white;
    }
    </style>
  </head>

<body>
  <%-include('../../partials/navbar')%>

  <div style="height: 3cm; width: 70%; border-bottom: 1px  solid black; margin-left: 15%;">
      <div style="float: left; margin-left: 2cm;">
        <br>
        <h2>Past Data</h2>
      </div>
      <div style="float: right;margin-right: 2cm;">
        <br>
        <button style="font-size: 28px;width: 3cm;" id="myBtn">+ New</button>
      </div>

  </div>
  <br>
  <br>

    <div style="width: 75%;height: 1.3cm;margin-left: auto;margin-right: auto;">
    <p style="text-align: center;color:white;background-color: green;width: fit-content;margin: auto;border-radius: 10%;" id="result"></p>
      <div style="width: 20%;float: left;">
        <h3 style="margin-left: 2cm;">Date and Time</h3>
      </div>
      <div style="width: 20%;float: left;margin-left: 2cm;">
        <h3>Description</h3> 
      </div> 
    </div> 
  <%data.forEach((item)=>{%>
    <div style="border: 1px solid black; width: 75%;height: 2.5cm;margin-left: auto;margin-right: auto; box-shadow: black 3px 3px;">
      <div style="width: 20%;float: left;">
        <br>
        <p  style="margin-left: 2.5cm;"><%=item['date']%>,<%=item['time']%></p>
      </div> 
      <div style="width: 20%;float: left;margin-left: 2cm;">
        <p><p style="font-weight: bold;">Blood Glucose Level:</p> <%=item['result']%><%=item['resultUnit']%></p>
      </div>
      <div style="float:left;width: 40%;">
        <p><p style="font-weight: bold;">Diet:</p><%=item['type']%></p>
      </div>
  <br>    
  </div>
  <br>
  <%})%>
  <div id="myModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content">
      <div class="modal-header">
        <span class="close">&times;</span>
        <h2 style="margin-right: 22cm;">Add a record</h2>
      </div>
      <div class="modal-body">
          <div style="float: left;width: 30%;">
            <div>
              <label for="date">Date</label><br>
            <input type="date" id="date" required><br>
            </div>
            <br>
            <div>
              <label for="time">Time</label><br>
            <input type="time" id="time" required><br>
            </div>
            <br>
            <div>
            <button type="submit" id="submitbutton">Add</button>
            </div>
          </div>
          <div style="float: left;width: 30%;">
            <label for="lname">Blood Glucose measurements:</label><br>
            <input type="number" id="bloodglucose" required><br>
          </div>
          <div style="float: left;width: 30%;">
            <label for="resultunit">Unit</label><br>
            <select name="resultunit" id="resultunit" required>
              <option value="mg/dl">mg/dl</option>
              <option value="mmol/L">mmol/L</option>
            </select>
          </div>
          <div style="float: left;width: 30%;">
            <label for="lname">Type</label><br>
            <select name="diet" id="diet" required>
              <option value="Fasting">Fasting</option>
              <option value="Postpradial">Postpradial</option>
              <option value="Random">Random</option>
            </select>
          </div>
          <br>
          <br>
      </div>
    </div>
  
  </div>
  
  <script>
  // Get the modal
  var modal = document.getElementById("myModal");
  
  // Get the button that opens the modal
  var btn = document.getElementById("myBtn");
  
  // Get the <span> element that closes the modal
  var span = document.getElementsByClassName("close")[0];
  
  // When the user clicks the button, open the modal 
  btn.onclick = function() {
    modal.style.display = "block";
  }
  
  // When the user clicks on <span> (x), close the modal
  span.onclick = function() {
    modal.style.display = "none";
  }
  
  // When the user clicks anywhere outside of the modal, close it
  window.onclick = function(event) {
    if (event.target == modal) {
      modal.style.display = "none";
    }
  }
  document.addEventListener('keydown',(event)=>{
    if(event.keyCode==27){
      event.preventDefault();
      document.getElementsByClassName("close")[0].click();
    }
  })
  
  const submit=document.getElementById("submitbutton");
  submit.addEventListener("click",()=>{
    submitForm();
  });

  function submitForm(){
      var date=document.getElementById("date");
      var time=document.getElementById("time");
      var glucose=document.getElementById('bloodglucose');
      var resultUnit=document.getElementById('resultunit');
      var diet=document.getElementById('diet');

      let pathname=window.location.pathname;
      pathname=pathname.split('/');
      let documentId=pathname[pathname.length-2];
      const useremail=window.location.pathname.split('/')[2];
      
      let temp=date.value.split('-').reverse();
      temp[1]=parseInt(temp[1]).toString();
      temp=temp.join('/');
       
      let timeArray=time.value.split(':');
      let meridian;
      if (timeArray[0]<=12){
        meridian='AM';
      }else{
        meridian='PM';
        timeArray[0]-=12;
      }
      timeArray=timeArray.join(':');
      if(date.value=="" || time.value=="" || glucose.value==""){
        return;
      }
      let data={
        'data':JSON.stringify({
          'date':temp,
          'time':timeArray+" "+meridian,
          'result':glucose.value,
          'resultUnit':resultUnit.value,
          'type':diet.value,
          'approved':"true"
        }),
        'patientId':documentId
      }
      
      try {
        var xhttp = new XMLHttpRequest();
        xhttp.open("POST", "/patient/bloodglucose/create", true);
        xhttp.setRequestHeader('Content-type', 'application/json');
        xhttp.setRequestHeader('useremail',useremail);
        xhttp.onreadystatechange = function() {
          if (this.readyState == 4 && this.status == 200) {
            modal.style.display = "none";
            
              document.getElementById('result').innerHTML="Data Added";
              setTimeout(() => {
                  document.getElementById('result').innerHTML=""
              }, 3000);
        }
        if(this.status==400){
          modal.style.display = "none";
          
          document.getElementById('result').innerHTML="Error";
          document.getElementById('result').style="background-color=red"
        }
      };
      xhttp.send(JSON.stringify(data));
    } catch (error) {
    }
   }
  </script>
</body>
</html>
